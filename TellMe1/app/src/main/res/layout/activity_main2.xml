<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calc00"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="89dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="TELL ME"
        android:textAlignment="center"
        android:textColor="#6E3131"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="158dp"
        android:layout_height="125dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="-10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginLeft="277dp"
        android:layout_marginTop="-115dp"
        android:background="@drawable/oval"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="select your pic"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#400F0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="101dp"
                android:layout_height="59dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#290505"
                android:textColorHint="#A57D7D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName8"
                android:layout_width="101dp"
                android:layout_height="58dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-55dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-light"
                android:hint="Age"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#290505"
                android:textColorHint="#A57D7D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName9"
                android:layout_width="97dp"
                android:layout_height="62dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="90dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#290505"
                android:textColorHint="#A57D7D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName11"
                android:layout_width="133dp"
                android:layout_height="58dp"
                android:layout_marginLeft="238dp"
                android:layout_marginTop="-55dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Future Job"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#290505"
                android:textColorHint="#A57D7D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="154dp"
                android:layout_height="62dp"
                android:layout_marginLeft="141dp"
                android:layout_marginTop="39dp"
                android:background="#638F6A91"
                android:text="Submit"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />



        </LinearLayout>
    </LinearLayout>

</LinearLayout>